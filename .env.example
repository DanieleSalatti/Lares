# LLM Provider Configuration
# Choose provider: anthropic (default), openai, or ollama
# LLM_PROVIDER=anthropic

# Anthropic (default)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-opus-4-5-20251101

# OpenAI (alternative)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o

# Ollama (local, no API key needed)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2
# OLLAMA_TIMEOUT=300  # seconds, increase for slow hardware

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here

# SQLite Database Path (default: data/lares.db)
# SQLITE_DB_PATH=data/lares.db

# BlueSky Integration (optional - enables search and posting)
# Create an app password at: Settings → App Passwords on BlueSky
# BLUESKY_HANDLE=your.handle.bsky.social
# BLUESKY_APP_PASSWORD=your_app_password_here

# Obsidian Integration (optional - enables vault tools)
# Path to your Obsidian vault folder
# OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# Tool Configuration (optional - defaults to current working directory)
# Paths Lares can read/write (colon-separated, like PATH)
# LARES_ALLOWED_PATHS=/path/to/workspace:/path/to/other/project
# Files to block (comma-separated glob patterns)
# LARES_BLOCKED_FILES=.env,*.pem,*credential*,*secret*,*token*,id_rsa*
# Where to store the command allowlist (defaults to .lares/command_allowlist.txt)
# LARES_ALLOWLIST_FILE=/path/to/allowlist.txt

# Bot Behavior
# Maximum tool iterations per message (default: 10, increase for complex tasks)
# LARES_MAX_TOOL_ITERATIONS=15
# Perch time interval in minutes (default: 60, i.e., 1 hour)
# LARES_PERCH_INTERVAL_MINUTES=60
# Context window limit in tokens (default: 50000, max for Claude Opus: 200000)
# LARES_CONTEXT_WINDOW_LIMIT=50000
# Enable context monitoring to track memory compaction patterns (default: false)
# LARES_CONTEXT_MONITORING=false

# Home Assistant Integration (optional - enables smart home control via MCP)
# Your Home Assistant instance URL (the MCP endpoint)
# HOME_ASSISTANT_URL=http://homeassistant.local:8123
# Long-lived access token (create in Profile → Security → Long-Lived Access Tokens)
# HOME_ASSISTANT_TOKEN=your_long_lived_access_token_here

# Memory Compaction Settings
# CONTEXT_LIMIT=50000
# COMPACT_THRESHOLD=0.70
# TARGET_AFTER_COMPACT=0.25
# CHARS_PER_TOKEN=4

# Path to Lares project directory
# LARES_PROJECT_PATH=/path/to/lares
# Path to approval database
# LARES_APPROVAL_DB=/path/to/lares/data/approvals.db
